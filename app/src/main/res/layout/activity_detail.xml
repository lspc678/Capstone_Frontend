<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSimulation"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:text="@string/simulation"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/outfit_bold"
            android:background="@drawable/btn_rounded_light_blue"
            android:layout_gravity="end"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp">

            <TextView
                android:id="@+id/textPowerOfConsumeType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:text="소비전력량"
                android:textSize="15sp"
                android:textColor="@color/light_grey"
                android:fontFamily="@font/outfit_regular" />

            <RelativeLayout
                android:layout_width="180dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/non_editable_textfield" />

                <TextView
                    android:id="@+id/textPowerOfConsume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:text="0.0"
                    android:textSize="15sp"
                    android:textColor="@color/light_grey"
                    android:fontFamily="@font/outfit_regular" />

                <TextView
                    android:id="@+id/textPowerOfConsumeUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:text="kWh/월"
                    android:textSize="15sp"
                    android:textColor="@color/light_grey"
                    android:fontFamily="@font/outfit_regular" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutForCO2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:text="@string/CO2"
                android:textSize="15sp"
                android:textColor="@color/light_grey"
                android:fontFamily="@font/outfit_regular" />

            <RelativeLayout
                android:layout_width="180dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/non_editable_textfield" />

                <TextView
                    android:id="@+id/textCO2Emission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:text="0.0"
                    android:textSize="15sp"
                    android:textColor="@color/light_grey"
                    android:fontFamily="@font/outfit_regular" />

                <TextView
                    android:id="@+id/textCO2EmissionUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:text="g/시간"
                    android:textSize="15sp"
                    android:textColor="@color/light_grey"
                    android:fontFamily="@font/outfit_regular" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:text="@string/registered_date"
                android:textSize="15sp"
                android:textColor="@color/light_grey"
                android:fontFamily="@font/outfit_regular" />

            <RelativeLayout
                android:layout_width="180dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/non_editable_textfield" />

                <TextView
                    android:id="@+id/textRegisteredDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:text="2023.11.02"
                    android:textSize="15sp"
                    android:textColor="@color/light_grey"
                    android:fontFamily="@font/outfit_regular" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDeleteDevice"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/delete_device"
        android:textSize="16sp"
        android:textColor="@color/red"
        android:fontFamily="@font/outfit_bold"
        android:background="@drawable/btn_delete_device"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>